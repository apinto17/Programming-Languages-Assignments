#lang typed/racket
;; DXUQ4 Language

;; Numbers and Operations
(struct numC ([n : Real])
  #:transparent)
(struct ifC ([arg : DXUQ4]
             [t : DXUQ4]
             [f : DXUQ4])
  #:transparent)

;; Functions
(struct idC([s : Symbol])
  #:transparent)
(struct appC([body : DXUQ4]
             [args : (Listof DXUQ4)])
  #:transparent)
(struct lamC ([args : (Listof Symbol)]
              [body : DXUQ4])
  #:transparent)

(define-type DXUQ4 (U numC ifC appC idC lamC))